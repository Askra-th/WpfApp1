<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid Background="Coral">
            <StackPanel>
                <TextBlock TextAlignment="Center" FontSize="30" Text="ЛОГИН"/>
                <TextBox x:Name="Login" Background="gray"  FontSize="20"></TextBox>
                <TextBlock Height="20"></TextBlock>
                <TextBlock TextAlignment="Center" FontSize="30" Text="ПАРОЛЬ"/>
                <PasswordBox x:Name="Passwordbox" Background="Gray" FontSize="20" PasswordChar="*" />
                <TextBlock Text="Name" FontSize="30" TextAlignment="Center" Height="50"></TextBlock>
                <TextBox x:Name="Name" Background="gray"  FontSize="20"></TextBox>
                <TextBlock Text="LastName" FontSize="30" TextAlignment="Center" Height="50"></TextBlock>
                <TextBox x:Name="LastName" Background="gray"  FontSize="20"></TextBox>
                <TextBlock Height="20"></TextBlock>
                <Button x:Name="Add_User" Height="50" Width="200" Content="Добавить пользователя" Click="Add_User_Click"></Button>

            </StackPanel>
        </Grid>

    </Grid>
</Window>
