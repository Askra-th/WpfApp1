<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Coral">
        <DockPanel>
            <StackPanel>
                <TextBlock TextAlignment="Center" FontSize="30" Text="ЛОГИН"/>
                <TextBox x:Name="Login" Background="gray"  FontSize="20"></TextBox>
                <TextBlock Height="50"></TextBlock>
                <TextBlock TextAlignment="Center" FontSize="30" Text="ПАРОЛЬ"/>
                <PasswordBox x:Name="Passwordbox" Background="Gray" FontSize="30" PasswordChar="*" />
                <TextBlock Height="50"></TextBlock>
                <Button x:Name="Enter1" Height="50" Width="200" Content="Войти" Click="Enter1_Click"></Button>
                <TextBlock Height="20"></TextBlock>
                <Button x:Name="Registration1" Height="50" Width="200" Content="Регистрация" Click="Registration1_Click"></Button>
            </StackPanel>
        </DockPanel>
    </Grid>

</Window>
